@model GlodinAutoTradeModel.Models.Customer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Internal.cshtml";
}
<style>
    .card-body {
        width: 600px
    }
</style>
<h2>Customer Profile</h2>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("EditCustomer", "Customer", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    @Html.HiddenFor(m => m.CID, new { @Value = Model.CID })
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">User Details</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="FirstName" class="col-sm-2 col-form-label">Firstname</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="LastName" class="col-sm-2 col-form-label">Lastname</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Telephone" class="col-sm-2 col-form-label">Telephone</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="CardType" class="col-sm-2 col-form-label">Card Type</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.CardType, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="CardNumber" class="col-sm-2 col-form-label">Card Number</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="ExpiryDate" class="col-sm-2 col-form-label">Card Expiry Date</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.ExpiryDate, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Address1" class="col-sm-2 col-form-label">Address 1</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Address2" class="col-sm-2 col-form-label">Address 2</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.Address2, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Address3" class="col-sm-2 col-form-label">Address 3</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.Address3, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Address4" class="col-sm-2 col-form-label">Address 4</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.Address4, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                }
            </div>

        </div>

    </div>
</section>