@model List<GlodinAutoTradeModel.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Internal.cshtml";
}

<h2>Products </h2>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Available Products</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Brand</th>
                                    <th>Category</th>
                                    <th>Units Available</th>
                                    <th>Price</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    @Html.Partial("_ShoppingCart", item);

                                }


                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        @Html.ActionLink("Add Product", "AddProduct", "Products", null, new { @class = "btn btn-secondary" })
                        @if (GlodinAutoTradeModel.Models.Globals.ShoppingCartItems > 0)
                        {
                            @Html.ActionLink("Proceed to Checkout", "Index", "Home", null, new { @class = "btn btn-primary" })
                        }
                    </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- /.card -->
                </div>

        </div>
        <!-- /.row -->

    </div><!-- /.container-fluid -->
</section>
@if (Model.Count > 0)
{
    <div class="row">



    </div>
}
else
{
    <p>Opps we ran out of products to sell.</p>
}

