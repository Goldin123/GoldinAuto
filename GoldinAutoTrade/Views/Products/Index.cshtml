@model List<GlodinAutoTradeModel.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Internal.cshtml";
}

<h2>Products </h2>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Available Products</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Brand</th>
                                    <th>Category</th>
                                    <th>Units Available</th>
                                    <th>Price</th>
                                    <th ></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.Description</td>
                                        <td>@item.Brand</td>
                                        <td>@item.Category</td>
                                        <td>
                                            @item.UnitsInStock
                                            @if (item.UnitsInStock > 1)
                                            {
                                                <text>units</text>
                                            }
                                            else
                                            {
                                                <text>unit</text>
                                            }
                                        </td>
                                        <td>@String.Format("{0:c}", item.UnitPrice)</td>
                                        <td>
                                            @Html.ActionLink("add to cart", "AddToCart", "Product", new { id = item.PID }, new { @class = "btn btn-primary" })
                                        </td>
                                    </tr>


                                }
                               

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- /.card -->
            </div>

        </div>
        <!-- /.row -->

    </div><!-- /.container-fluid -->
</section>
@if (Model.Count > 0)
{
    <div class="row">



    </div>
}
else
{
    <p>Opps we ran out of products to sell.</p>
}

